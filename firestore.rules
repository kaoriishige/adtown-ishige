rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- 求人パートナー (recruiters) のルール ---
    // (既存のルールはそのまま)
    match /recruiters/{recruiterId} {
      allow read, write: if request.auth != null && request.auth.uid == recruiterId;
    }
    
    // --- 一般ユーザー (users) のルール ---
    // 新規登録時に自分のドキュメントを作成できる
    // 自分のドキュメントのみ読み書き可能
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    
    // --- 求人情報 (recruitments) のルール ---
    // (既存のルールはそのまま)
    match /recruitments/{recruitmentId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow read: if true; 
      allow update: if request.auth != null && request.auth.uid == resource.data.uid;
    }
    
    // --- 応募情報 (applicants) のルール ---
    // (既存のルールはそのまま)
    match /applicants/{applicantId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && (resource.data.partnerId == request.auth.uid || resource.data.userId == request.auth.uid);
    }
    
    // --- 求職者プロフィール (userProfiles) のルール ---
    // (既存のルールはそのまま)
    match /userProfiles/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ★★★★★★★【以下を追記】★★★★★★★
    // --- 店舗アプリ (artifacts) のルール ---

    // --- リード情報 (leads) のルール ---
    match /artifacts/{appId}/leads/{leadId} {
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow write: if request.auth != null && (
        (resource == null && request.resource.data.ownerId == request.auth.uid) ||
        (resource != null && resource.data.ownerId == request.auth.uid)
      );
    }

    // {userId} と自分のID (request.auth.uid) が一致する場合に許可
    match /artifacts/{appId}/users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // ユーザー自身の全てのサブコレクションを許可 (bodyRecords, babyLog, studyLogs, fridgeItems etc)
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    // ★★★★★★★【追記ここまで】★★★★★★★

    // --- プレミアム機能のコレクション ---
    // フリマ投稿
    match /furima_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // おすそわけ投稿
    match /osuso_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // ヘルパー投稿
    match /helper_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // スキル投稿
    match /skill_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // ペット掲示板
    match /pet_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // レンタル投稿
    match /rental_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // 空き家投稿
    match /akiya_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // 空き畑投稿
    match /akihata_posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // サポートアラート
    match /support_alerts/{alertId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // 半額アラート
    match /half_price_alerts/{alertId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

  }
}